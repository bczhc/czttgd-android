<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondaryContainer">@color/container_tonal</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App" />

    <style name="Theme.App.MainPageBottomNavigator" parent="Theme.App">
        <item name="colorSecondaryContainer">#1684fd</item>
        <item name="colorOnSurface">#1684fd</item>
    </style>

    <style name="Theme.App.NegativeButton" parent="Theme.App">
        <item name="colorPrimary">@color/negative_button_bg</item>
    </style>

    <style name="Widget.App.SmallerDenseExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Theme.App.SmallerDenseExposedDropdownMenu" parent="Theme.App">
        <item name="editTextStyle">@style/Widget.App.SmallerDenseExposedDropdownMenu</item>
    </style>

    <style name="Widget.App.SmallerDenseEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Theme.App.SmallerDenseEditText" parent="Theme.App">
        <item name="editTextStyle">@style/Widget.App.SmallerDenseEditText</item>
    </style>
</resources>
