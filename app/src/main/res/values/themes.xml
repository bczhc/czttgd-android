<resources>
    <!-- Base application theme. -->
    <style name="Theme.App.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/main_page_surface</item>
        <item name="android:colorBackground">@color/main_page_surface</item>
        <item name="android:statusBarColor">@color/main_page_surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App.MainPage" parent="Theme.App.Base">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="elevationOverlayEnabled">false</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>
    </style>

    <style name="Theme.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="Theme.App.BottomNavigationView" parent="Theme.App.MainPage">
        <item name="colorSurfaceContainer">@color/main_page_surface</item>
        <item name="colorOnSurfaceVariant">@color/bottom_nav_bar_inactive_item</item>
        <item name="colorOnSecondaryContainer">@color/bottom_nav_bar_active_item</item>
        <item name="colorOnSurface">@color/bottom_nav_bar_active_item</item>
    </style>

    <style name="Theme.App.FormFilling" parent="Theme.App.MainPage">
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorOutlineVariant">@color/form_filling_divider</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.App.Toolbar" parent="Theme.App.FormFilling">
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorOnSurface">#101010</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextAppearance.App.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.RecordsFragment" parent="Theme.App.MainPage">
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorOnSurfaceVariant">#101010</item>
        <item name="colorSurface">@color/white</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="TextAppearance.App.FormTextHint" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/form_text</item>
    </style>

    <style name="TextAppearance.App.FormText" parent="TextAppearance.App.FormTextHint">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.App.FormFilling.RadioButton" parent="Theme.App.FormFilling">
        <item name="colorOnSurfaceVariant">@color/form_text</item>
        <item name="android:textColor">@color/form_text</item>
    </style>

    <style name="Theme.App.RecordsFragment.SearchView" parent="Theme.App.RecordsFragment">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
